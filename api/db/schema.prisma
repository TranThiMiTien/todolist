// schema.prisma — dùng PostgreSQL làm database

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // ví dụ: postgresql://user:pass@localhost:5432/dbname
}

// Model: Task (nhiệm vụ chính)
model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  // Quan hệ: một Task có nhiều Subtasks
  subtasks Subtask[]
}

// Model: Subtask (việc con)
model Subtask {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Khóa ngoại liên kết đến Task
  taskId Int
  // Xoá các khoá ngoại liên quan khi task main bị delete
  task    Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
}
