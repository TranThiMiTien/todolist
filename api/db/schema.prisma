// schema.prisma — dùng PostgreSQL làm database

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // ví dụ: postgresql://user:pass@localhost:5432/dbname
}


// Mô hình dữ liệu Task
model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)

  createdAt DateTime @default(now())
}
